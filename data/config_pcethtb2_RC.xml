      <beamTriggerVetoBitMask>0x0100</beamTriggerVetoBitMask>
      <pedTriggerVetoBitMask>0x0200</pedTriggerVetoBitMask>
      <ledTriggerVetoBitMask>0x0400</ledTriggerVetoBitMask>
    </board>


